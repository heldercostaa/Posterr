{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",
    
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "skipLibCheck": true,
    
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    
    "baseUrl": "./src",
    "paths": {
      "@modules/*": ["modules/*"],
      "@errors/*": ["errors/*"]
    }    
  }
}
